<div ng-controller="app.views.users.index as vm">
    <h1>@L("Users")</h1>
    <div class="row">
        <div class="col-md-12">
            <button ng-click="vm.openUserCreationModal()" class="btn btn-primary pull-right"><i class="fa fa-plus"></i> @L("CreateNewUser")</button>
            <br/>
            <br />
            <br />
            <div class="row">
                <table id="usersTable" class="table table-bordered table-striped table2excel">
                    <thead>
                        <tr>
                            <th>@L("UserName")</th>
                            <th>@L("Name")</th>
                            <th>@L("LastName")</th>
                            <th>@L("EmailAddress")</th>
                            <th>@L("RoleType")</th>
                            <th>@L("Tenant")</th>
                            <th>@L("IsActive")</th>
                        </tr>
                    </thead>
                    <tbody id="usersTableBody"></tbody>
                </table>  
            </div>
                
        </div>
    </div>
</div>