@using Abp.MultiTenancy
@using PayLab_BP.MultiTenancy
<div>
    <form name="tenantCreateForm" role="form" novalidate class="form-validation">
        <div class="modal-header">
            <center>
                <div>
                    <span><i class="fa fa-lock fa-5x"></i></span>
                </div>
                <h4 class="modal-title" style="font-size: 16px;">
                    <b>@L("PasswordChange")</b> <span class="label label-primary"></span>
                </h4>
            </center>
        </div>
        <div class="modal-body">

            <div class="form-group">
                <label>@L("Password")</label>
                <input type="password" name="Password" class="form-control" ng-model="vm.Credentials.Password" maxlength="@PayLab_BP.Users.User.MaxPlainPasswordLength">
            </div>
            <div class="form-group">
                <label>@L("PasswordConfirm")</label>
                <input type="password" name="Password" class="form-control" ng-model="vm.Credentials.PasswordConfirm" maxlength="@PayLab_BP.Users.User.MaxPlainPasswordLength">
            </div>


        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" ng-click="vm.cancel()">@L("Cancel")</button>
            <button type="submit" class="btn btn-primary blue" ng-click="vm.savePassword()"><i class="fa fa-save"></i> <span>@L("Save")</span></button>
        </div>
    </form>
</div>